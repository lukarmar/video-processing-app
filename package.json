{
  "name": "video-platform-root",
  "version": "1.0.0",
  "description": "Video Platform - Root package for development tools",
  "private": true,
  "scripts": {
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "test:all": "./test-all.sh",
    "test:coverage": "npm run test -- --coverage --workspaces",
    "build": "npm run build --workspaces",
    "setup": "./setup.sh",
    "services:up": "docker-compose up -d",
    "services:down": "docker-compose down",
    "services:logs": "docker-compose logs -f",
    "services:ps": "docker-compose ps",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "health:check": "curl -f http://localhost:3006/health && curl -f http://localhost:3002/health && curl -f http://localhost:3004/health",
    "pre-commit": "lint-staged"
  },
  "workspaces": [
    "services/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@eslint/js": "^9.30.1",
    "@types/archiver": "^6.0.3",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/connect": "^3.4.38",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.6.2",
    "@types/methods": "^1.1.4",
    "@types/mime": "^3.0.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.12",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/qs": "^6.14.0",
    "@types/send": "^0.17.5",
    "@types/serve-static": "^1.15.8",
    "@types/socket.io": "^3.0.2",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.2",
    "@types/yargs": "^17.0.33",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "is-ci": "^4.1.0",
    "lint-staged": "^13.2.0",
    "typescript-eslint": "^8.36.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}