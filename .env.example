# Development environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/video_platform
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=video_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,wmv

# Video Processing
FRAMES_PER_SECOND=1
OUTPUT_FORMAT=png
COMPRESSION_QUALITY=95
MAX_CONCURRENT_JOBS=3

# Storage
STORAGE_PATH=./storage
TEMP_PATH=./temp

# AWS (for production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=video-platform-storage

# SQS (LocalStack for development)
SQS_ENDPOINT=http://localhost:4566
SQS_QUEUE_URL=http://localhost:4566/000000000000/video-processing

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Cache
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=3000

# Logging
LOG_LEVEL=debug
